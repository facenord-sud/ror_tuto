%p#notice= notice

%p
  %b Title:
  = @article.title
%p
  %b Text:
  = @article.text

= link_to 'Edit', edit_article_path(@article)
\|
= link_to 'Back', articles_path
- if @article.comments.any?
  %h2 Comments
  -@article.comments.each do |comment|
    %p
      %strong
        Commenter:
        = comment.commenter
    %p
      %strong
        Comment:
        = comment.body
- else
  %h3 No comments
%h2 Add a comment

= form_for [@article, @comment] do |f|
  = render partial: 'includes/errors', locals: {object: @comment}

  = f.label :commenter
  = f.text_field :commenter

  = f.label :body
  = f.text_area :body

  =f.submit class: 'button success'
