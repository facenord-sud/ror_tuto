%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Text
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.text
        %td= link_to 'Show', article, class: 'button secondary tiny'
        %td= link_to 'Edit', edit_article_path(article), class: 'button secondary tiny'
        %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button error tiny'

%br

= link_to 'New Article', new_article_path, class: 'button success'
